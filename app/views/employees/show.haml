%p
  = image_tag "employees/#{@employee.image}"
%p
  %b Navn:
  = @employee.name
%p
  %b Titel:
  = @employee.title
%p
  %b Email:
  = link_to @employee.email, "mailto:#{@employee.email}"
%p
  %b Telefon:
  = @employee.phone

- if can? :manage, @employee
  .notice.actions
    = link_to 'Rediger', edit_employee_path(@employee), :style => 'color: black;'
    = link_to 'Slet', @employee, :confirm => 'Are you sure?', :method => :delete, :style => 'color: black;'
    = link_to 'PDF', employee_path(@employee, format: "pdf")