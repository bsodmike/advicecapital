
= form_for(@employee) do |f|
  - if @employee.errors.any?
    #error_explanation
      %h2
        = pluralize(@employee.errors.count, "error")
        prohibited this employee from being saved:
      %ul
        - @employee.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name, "Fulde navn"
    %br/
    = f.text_field :name
  .field
    = f.label :title, "Titel"
    %br/
    = f.text_field :title
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :phone, "Telefon"
    %br/
    = f.text_field :phone
  .field
    = f.label :image, "Billede"
    %br/
    = f.file_field :image
  .actions
    = f.submit "Gem"