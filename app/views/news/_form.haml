= form_for(@news) do |f|
  - if @news.errors.any?
    #error_explanation
      %h2
        = pluralize(@news.errors.count, "error")
        prohibited this news from being saved:
      %ul
        - @news.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
    %br/
  .field
    = f.label :content
    %br/
    = f.text_area :content
    %br/
  .field
    = f.label :date
    %br/
    = f.text_field :date, :class => "date_select"
  .actions
    = f.submit
