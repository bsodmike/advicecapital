%h3 Nyheder

.span-22
  %table
    - @news.each do |news|
      %tr
        %td
          %b= news.created_at.strftime('%D - %H:%m')
          \-
          = raw(truncate(news.content, :length => 50))
        - if current_user && current_user.admin?
          %td
            .link_black
              = link_to 'Vis', news
              = link_to 'Rediger', edit_news_path(news)
              = link_to 'Slet', news, :confirm => 'Are you sure?', :method => :delete

        %td
    .link_black
      = paginate @news

%br/
%br/
- if current_user && current_user.admin?
  .link_black
    = link_to 'Opret nyhed', new_news_path