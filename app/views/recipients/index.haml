%h3=t ".title"
%table
  %tr
    %th=t ".firstname"
    %th=t ".lastname"
    %th=t ".email"
    %th
    %th
    %th
  - @recipients.each do |recipient|
    %tr
      %td= recipient.firstname
      %td= recipient.lastname
      %td= recipient.email
      %td
        - if can? :manage, recipient
          .notice.actions
            = link_to 'Vis', recipient
            = link_to 'Rediger', edit_recipient_path(recipient)
            = link_to 'Slet', recipient, confirm: 'Er du sikker?', method: :delete
%br/
- if can? :manage, @recipients
  .notice.actions
    = link_to 'Ny nyhedsmodtager', new_recipient_path