= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this news from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :emaul, "Email:"
    %br/
    = f.email_field :email
  .field
    = f.label :role, "Rolle:"
    %br/
    = f.select(:role, @user.role)
  .actions
    = f.submit "Gem"
