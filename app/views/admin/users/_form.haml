= form_for ([:admin, @user]) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this news from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name, "Fulde navn:"
    %br/
    = f.text_field :name
  .field
    = f.label :email, "Email:"
    %br/
    = f.email_field :email, :value => @user.email
  .field
    = f.label :password, "Kodeord:"
    %br/
    = f.password_field :password

  - if can? :manage, @user
    .field
      - roles = ['super_admin', 'admin', 'visitor']
      = f.label :role, "Rolle:"
      %br/
      = f.select :role, options_for_select(roles)
  .actions
    = f.submit "Gem"
