%div{:style=>"float:left;"}
	%h3 Velkommen #{@investor.name + " - " + @investor.email} 
	%br/
	%br
	- if current_user.super_admin?
		%b Kundetype:
		%br/
		= @investor.type

	%b Dato for indtrædelse:
	%br/
	= @investor.entry_date.strftime('%d-%m-%y')
	%br/
	%br/

	%b Antal aktier:
	%br/
	= @investor.entry_stock_count
	%br/
	%br/

	%b Aktiekurs ved indtrædelse:
	%br/
	= @investor.entry_rate
	%br/
	%br/

	%b Nuværende aktiekurs
	%br/
	= @investor.current_rate
	%br/
	%br/

	%b Investeret beløb:
	%br/
	= number_with_delimiter(@investor.entry_price) + " kr."
	%br/
	%br/

	%b Aktuelt afkast:
	%br/
	- throwoff = @investor.current_rate.to_i - @investor.entry_rate.to_i# * @investor.entry_stock_count
	- throwoffValue = throwoff * @investor.entry_stock_count
	- throwoffPercent = throwoff / @investor.entry_rate.to_i
	= number_with_delimiter(throwoffValue) + " kr."
	%br/
	= throwoffPercent.to_s + " %"

	-# throwoff = @investor.entry_price / @investor.entry_stock_count * @investor.entry_rate
	=# throwoff.to_s + " kr."
	%br/
	%br/

	%b Primo / Ultimo Kurs
	%br/
	= CompanyStock.first.primo
	\/
	= CompanyStock.first.ultimo
	%br/
	%br/

	%h3 Aktie udvikling
	%table{:style => "width:300px;"}
		%tr
			%th Værdi
			%th Måned
			%th År
		- @investorStocks.each do |s|
			%tr
				%td= s.value
				%td= s.month
				%td= s.year

%div{:style=>"float:right;margin-top:80px;"}
	- stock_value = @stocks.map(&:value)
	- investor_stock_value = @investorStocks.map(&:value)
	- stock_month = @stocks.map(&:month)
	- stock_year = @stocks.map(&:year)
	 
	-# data = [[stock_value], [stock_month]]
	- chart = Gchart.line(:size => '600x300', :title => "Aktiekurs", :bg => 'fff', :legend => ['Aktie Værdi', 'Månedsobservation'], :data => [stock_value, investor_stock_value], :axis_with_labels => 'y,x', :line_colors => "FF0000,00FF00", :axis_labels => [ ['Kurs'], ['Jan','Feb','Mar','Apr','Maj','Juni','Juli','Aug','Sep','Okt','Nov','Dec'] ]) unless stock_value.empty?

	%img{:src => chart}

	%br/
	%br/
	= button_to 'Skatteregnskab', ''

- if can? :manage, @investor
	.notice.actions{:style=>"float:left;clear:both;"}
		= link_to 'Rediger', edit_admin_investor_path(@investor)
		|
		= link_to 'Slet', admin_investor_path(@investor), :confirm => 'Er du sikker?', :method => :delete