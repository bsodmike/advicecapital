%h3 Investor Profiler
%table
  %tr
    %th Investor ID
    %th Investor Email
    %th Bruger ID
    %th Bruger Email
    %th
  - @investor_profiles.each do |investor_profile|
    %tr
      %td= investor_profile.investor_id 
      %td= investor_profile.investor.email
      %td= investor_profile.user_id
      %td= investor_profile.user.email
      - if can? :manage, investor_profile
        %td
          .notice.actions
            = link_to 'Vis', admin_investor_profile_path(investor_profile)
            = link_to 'Rediger', edit_admin_investor_profile_path(investor_profile)
            = link_to 'Slet', admin_investor_profile_path(investor_profile), confirm: 'Er du sikker?', method: :delete
%br/
- if can? :manage, @investor_profiles
  .notice.actions
    = link_to 'Ny Investor profil', new_admin_investor_profile_path