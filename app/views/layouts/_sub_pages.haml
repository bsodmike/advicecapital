          = link_to 'Strategi', '/about_ac/strategy'
      - else
        %div
          = link_to 'Historie', '/about_ac/history'  
        %div
          = link_to 'Koncept', '/about_ac/concept'
        %div
          = link_to 'Strategi', '/about_ac/strategy'

