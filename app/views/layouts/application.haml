!!!
%html
  %head
    %title= @page_title
    = stylesheet_link_tag "application"
    = render 'layouts/stylesheets' 
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js', 'http://gsgd.co.uk/sandbox/jquery/easing/jquery.easing.1.3.js'
    = javascript_include_tag 'http://google.com/jsapi'
    = javascript_tag 'google.load("search", "1", {language : "da"});'
    = javascript_tag 'google.setOnLoadCallback(function() {var customSearchControl = new google.search.CustomSearchControl("007203030625873515076:5_kpu81og3w");customSearchControl.setResultSetSize(google.search.Search.FILTERED_CSE_RESULTSET);customSearchControl.draw("cse");}, true);'
    = javascript_include_tag 'application'
    = javascript_include_tag 'jcarousellite_1.0.1.min'
    = javascript_include_tag 'jquery.nivo.slider'
    = javascript_include_tag 'jquery.nivo.slider.pack'
    = javascript_include_tag 'tiny_mce/jquery.tinymce.js'
    = javascript_include_tag 'tiny_mce/tiny_mce.js'
    = javascript_include_tag 'http://www.google.com/jsapi?key=ABQIAAAASK8Pro_gmHn7Es4JWtxDaRSb-IRhU3-s1z54ijxt-DewA5k8gxTHW-y-1W9BiTqbwycTVUFdSyLzEg'

    /[if lt IE 9]
      = javascript_include_tag 'http://html5shiv.googlecode.com/svn/trunk/html5.js'
    = csrf_meta_tag

  %body

    .container

      = render 'layouts/header'
      
      .stay-clear
      
      #wrapper
        - flash.each do |key, value|
          = content_tag(:div, value, :class => "flash #{key}")

        - if current_user && current_user.admin?
          = render 'layouts/admin_menu'

        = yield

    = render 'layouts/footer'


