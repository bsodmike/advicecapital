!!!
%html
  %head
    %title= @page_title
    %meta{:"http-equiv" => "Content-Type", :"content" => "text/html; charset=utf-8"}
    %meta{:"http-equiv" => "X-UA-Compatible", :"content=" => "IE=9"}
    = stylesheet_link_tag 'blueprint/screen', :media => "screen, projection"
    = stylesheet_link_tag 'blueprint/print', :media => "print"
    /[if lt IE 8]
      = stylesheet_link_tag 'blueprint/ie'

    = stylesheet_link_tag "application"
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js', '//ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js'
    = javascript_include_tag 'application'
    = javascript_include_tag 'http://gsgd.co.uk/sandbox/jquery/easing/jquery.easing.1.3.js'
    /= javascript_include_tag 'http://maps.google.com/maps?file=api&amp;v=3&amp;sensor=false'
    = javascript_include_tag 'http://maps.googleapis.com/maps/api/js?sensor=true'
    //= javascript_include_tag 'http://mayzes.org/js/jquery.googlemaps.pack.1.01.js'
    //= javascript_include_tag 'http://gmap.nurtext.de/js/jquery.gmap-1.1.0-min.js'
    = javascript_include_tag '//google.com/jsapi'
    :javascript
      google.load('visualization', '1.0', {'packages':['corechart']});

    = javascript_include_tag 'http://cdn.pandastream.com/u/1.3/jquery.panda-uploader.min.js'
    = javascript_include_tag '/javascripts/swfobject/swfobject.js'
    = javascript_include_tag '/javascripts/tiny_mce/jquery.tinymce.js'
    = javascript_include_tag '/javascripts/tiny_mce/tiny_mce.js'

    /[if lt IE 9]
      = javascript_include_tag 'http://html5shiv.googlecode.com/svn/trunk/html5.js'
    = csrf_meta_tag
  %body

    .container

      = render 'layouts/header'
      
      .stay-clear
      
      #wrapper
        - flash.each do |key, value|
          = content_tag(:div, value, :class => "flash #{key}")

        - if current_user && current_user.admin?
          = render 'layouts/admin_menu'

        = yield
        
    
    = yield :pre_body_close  
    = render 'layouts/footer'


  #user_nav
    - if user_signed_in?
      Logget ind som #{current_user.email}.
      = link_to "Log ud", destroy_user_session_path, :method => :delete


