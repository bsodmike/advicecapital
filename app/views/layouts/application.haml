!!!
%html
  %head
    %title= @page_title
    %meta{:"http-equiv" => "Content-Type", :"content" => "text/html; charset=utf-8"}
    %meta{:"http-equiv" => "X-UA-Compatible", :"content=" => "IE=9"}
    = stylesheet_link_tag 'blueprint/screen', :media => "screen, projection"
    = stylesheet_link_tag 'blueprint/print', :media => "print"
    /[if lt IE 8]
      = stylesheet_link_tag 'blueprint/ie'

    = stylesheet_link_tag "application"
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js', '//ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js'
    = javascript_include_tag 'application'
    = javascript_include_tag 'http://gsgd.co.uk/sandbox/jquery/easing/jquery.easing.1.3.js'
    = javascript_include_tag 'http://maps.google.com/maps?file=api&amp;v=3&amp;key=ABQIAAAAatylg6eJsmtCU-0uUC2qqxSWuUCy_KeP0WGUPxUQqq0v-gdOphS9KYwlr-dCL56PuK1zunghxSwbvQ'
    = javascript_include_tag 'http://gmap.nurtext.de/js/jquery.gmap-1.1.0-min.js'
    = javascript_include_tag '/javascripts/tiny_mce/jquery.tinymce.js'
    = javascript_include_tag '/javascripts/tiny_mce/tiny_mce.js'

    /[if lt IE 9]
      = javascript_include_tag 'http://html5shiv.googlecode.com/svn/trunk/html5.js'
    = csrf_meta_tag
  %body

    .container

      = render 'layouts/header'
      
      .stay-clear
      
      #wrapper
        - flash.each do |key, value|
          = content_tag(:div, value, :class => "flash #{key}")

        - if current_user && current_user.admin?
          = render 'layouts/admin_menu'

        = yield
    
    = yield :pre_body_close  
    = render 'layouts/footer'


  #user_nav
  - if user_signed_in?
    Signed in as #{current_user.email}.
    = link_to "Log ud", destroy_user_session_path, :method => :delete
  - else
    = link_to "Log ind", new_user_session_path


