
- form_for(@board) do |f|
  - if @board.errors.any?
    #error_explanation
      %h2
        = pluralize(@board.errors.count, "error")
        prohibited this employee from being saved:
      %ul
        - @board.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :image
    %br/
    = f.text_field :image
  .actions
    = f.submit