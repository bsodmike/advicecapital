%h3 Kontakt os
= form_for @contact_form, :url => new_contact_path do |f|

  .field
    = f.label :name
    %br/
    = f.text_field :name

  .field
    = f.label :email
    %br/
    = f.text_field :email

  .field
    = f.label :message
    %br/
    = f.text_area :message

  .action
    = f.submit "Send"