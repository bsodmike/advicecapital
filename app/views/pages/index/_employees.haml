- content_for :pre_body_close do
  :javascript
    var peon_data = []
    $.ajax({
      url: 'employees.json',
      async: false,
      dataType: 'json',
      success: function (json) {
        peon_data = json;
      }
    });

    console.log(peon_data);
    var peon = peon_data

    function slideFlip() {
        peon = peon_data.pop();
        $("#employee_image").html('<a class="employee_image_popup" href="/assets/employees/'+peon.image+'" rel="fancybox"><img src="/assets/employees/'+peon.image+'" height="150px" width="120px" /></a>');
        $("#employee_info").html(peon.name+'<br/>'+peon.title+'<br/>'+'<a href="mailto:'+peon.email+'">'+peon.email+'</a>'+'<br/>'+peon.phone);
        peon_data.unshift(peon);
    }

    setInterval(slideFlip, 8000);
