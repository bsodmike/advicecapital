- content_for :pre_body_close do
  :javascript
    var peon_data = []
    $.ajax({
      url: 'employees.json',
      async: false,
      dataType: 'json',
      success: function (json) {
        peon_data = json;
      }
    });

    //console.log(peon_data);
    var peon = peon_data

    function slideFlip() {
    	if (peon != null) {

        peon = peon_data.pop();
        
        $("#employee_image").html('<img src="'+peon.image.image.url+'" height="210px" width="140px" />');
        $("#employee_info").html(peon.name+'<br/>'+peon.title+'<br/>'+'<a href="mailto:'+peon.email+'">'+peon.email+'</a>'+'<br/>'+peon.phone);
        peon_data.unshift(peon);

        $("#employee_image").click(function() {
          $.fancybox({
            'href' : peon.image.image.url,
            'title'   : '<p>'+peon.name+'<br/><br/>'+peon.title+'<br/><br/><a href="mailto:'+peon.email+'">'+peon.email+'</a></p>',
            'titlePosition': 'inside'
          });
        });
      }
    }
    setInterval(slideFlip, 8000);

