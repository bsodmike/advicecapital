- @stocks.each_with_index do |stock, name|
  %li
    = @stocks_n[name]
    - if stock[:change].first == "+"
      %span{:style => "color:green;"}
        = stock[:change] + "%"
    - elsif stock[:change].first == "-"
      %span{:style => "color:red;"}
        = stock[:change] + "%"
    - elsif stock[:change].first == " "
      %span{:style => "color:gray;"}
        = stock[:change] + "%"
    = stock[:price]