= debug params
= flash[:error]

%h3 Sign in

= form_for :session, :action => :create do |f|
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :password
    %br/
    = f.password_field :password
  .actions
    = f.submit "Sign In"
/
  %p
    New user? =link_to 'Sign Up now!', signup_path
